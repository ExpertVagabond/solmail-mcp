{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.ExpertVagabond/solmail",
  "description": "Send physical mail with Solana cryptocurrency - AI agents can send real letters worldwide",
  "repository": {
    "url": "https://github.com/ExpertVagabond/solmail-mcp",
    "source": "github"
  },
  "version": "1.0.2",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "solmail-mcp",
      "version": "1.0.2",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Your agent's Solana wallet private key (base58 or JSON array format)",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "SOLANA_PRIVATE_KEY"
        },
        {
          "description": "Solana network: devnet for testing, mainnet-beta for production",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SOLANA_NETWORK",
          "defaultValue": "devnet"
        },
        {
          "description": "SolMail API endpoint",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SOLMAIL_API_URL",
          "defaultValue": "https://solmail.online/api"
        },
        {
          "description": "Merchant wallet address for payments",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MERCHANT_WALLET"
        }
      ]
    }
  ]
}
